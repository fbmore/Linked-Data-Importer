{
    "name": "sketch-linked-data-exporter",
    "description": "Export selection as Linked Data-ready JSON file and images",
    "version": "0.0.2",
    "engines": {
        "sketch": ">=3.0"
    },
    "skpm": {
        "name": "Linked Data exporter",
        "manifest": "src/manifest.json",
        "main": "sketch-linked-data-exporter.sketchplugin",
        "assets": [
            "assets/**/*"
        ],
        "sketch-assets-file": "sketch-assets/icons.sketch"
    },
    "scripts": {
        "build": "skpm-build",
        "watch": "skpm-build --watch",
        "start": "skpm-build --watch",
        "postinstall": "npm run build && skpm-link"
    },
    "devDependencies": {
        "@skpm/builder": "^0.7.4",
        "@skpm/extract-loader": "^2.0.2",
        "css-loader": "^3.2.0",
        "html-loader": "^0.5.5"
    },
    "resources": [
        "resources/**/*.js"
    ],
    "dependencies": {
        "@skpm/fs": "^0.2.6",
        "@types/node": "17.0.23",
        "hex-rgb": "^5.0.0",
        "node-fetch": "^2.6.7",
        "path": "0.12.7",
        "platform-folders": "^0.6.0",
        "rgb-hex": "^3.0.0",
        "sketch-module-web-view": "^3.1.4",
        "sort-object": "^3.0.3"
    },
    "author": "Matteo Gratton <icona79@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/icona79/sketch-link-data-manager.git"
    }
}
